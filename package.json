{
  "name": "hs-platform-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run validate:config && next dev",
    "dev:unsafe": "next dev",
    "build": "next build",
    "build:secure": "npm run validate && npm run build && npm run validate:build",
    "start": "next start",
    "types:supabase": "./scripts/generate-supabase-types.sh",
    "types:check": "tsc --noEmit",
    "validate:config": "node scripts/validate-dev-config.js",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest __tests__/components __tests__/lib",
    "test:integration": "jest __tests__/api",
    "test:all": "node scripts/run-tests.js",
    "validate": "npx tsx lib/validation/orchestrator.ts",
    "validate:security": "npx tsx lib/validation/agents/security/securityScanner.ts",
    "validate:compatibility": "npx tsx lib/validation/agents/compatibility/compatibilityValidator.ts",
    "validate:build": "npx tsx lib/validation/agents/build/buildValidator.ts",
    "install-hooks": "cp lib/validation/hooks/pre-commit.ts .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.90.2",
    "framer-motion": "^12.23.12",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.544.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-circular-progressbar": "^2.2.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.1.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@netlify/plugin-nextjs": "^5.13.3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chalk": "^4.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-watch-typeahead": "^3.0.1",
    "ora": "^5.4.1",
    "tailwindcss": "^4",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}

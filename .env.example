# ===========================================
# FRONTEND ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to frontend/.env.local and fill in your actual values
# NEVER commit .env.local to version control

# ===========================================
# CORE APPLICATION CONFIGURATION
# ===========================================

# Application Environment
NODE_ENV=development

# Site URL (used for redirects and API calls)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (Public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# ===========================================
# BACKEND API CONFIGURATION (REQUIRED)
# ===========================================

# Backend API URL (Express.js server)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================

# Anthropic Claude API Key (for AI-powered features)
NEXT_PUBLIC_ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================

# Airtable Integration (for data storage)
NEXT_PUBLIC_AIRTABLE_API_KEY=pat.your-airtable-key-here
NEXT_PUBLIC_AIRTABLE_BASE_ID=your-base-id-here

# Google Workspace Integration (for exports)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Enable test endpoints (development only)
NEXT_PUBLIC_ENABLE_TEST_ENDPOINTS=true

# Test customer ID for development
NEXT_PUBLIC_TEST_CUSTOMER_ID=CUST_0001

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Netlify Integration (for deployment)
NEXT_PUBLIC_NETLIFY_API_KEY=nfp_your-netlify-key-here

# Render Integration (for backend deployment)
NEXT_PUBLIC_RENDER_SERVICE_ID=your-render-service-id
NEXT_PUBLIC_RENDER_URL=https://your-app.onrender.com
RENDER_API_KEY=rnd_your-render-key-here

# ===========================================
# SECURITY & PERFORMANCE
# ===========================================

# CORS Origin (for API calls)
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=900000
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable advanced analytics
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# ===========================================
# NOTES
# ===========================================
# 
# 1. All NEXT_PUBLIC_ variables are exposed to the browser
# 2. Never put sensitive secrets in NEXT_PUBLIC_ variables
# 3. Use server-side environment variables for sensitive data
# 4. Test your configuration with the test-auth-bridge page
# 5. Verify Supabase connection with the supabase-dashboard page
#
# ===========================================
